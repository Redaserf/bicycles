<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:padding="16dp">

    <!-- Título: Editar Nombre de Usuario -->
    <TextView
        android:id="@+id/tv_edit_username"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Editar Nombre de Usuario"
        android:textColor="@color/black"
        android:fontFamily="sans-serif-smallcaps"
        android:textSize="26sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/et_username" />

    <!-- Campo de texto: Nombre de Usuario -->
    <EditText
        android:id="@+id/et_username"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Ingresa tu nombre de usuario"
        android:textColor="@color/azul_500"
        android:fontFamily="sans-serif-smallcaps"
        android:hintTextColor="@color/azul_300"
        android:background="@drawable/rounded_edit_text"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/tv_edit_username"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/v1" />

    <!-- Línea divisoria -->
    <View
        android:id="@+id/v1"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/azul_300"
        app:layout_constraintTop_toBottomOf="@id/et_username"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_edit_lastname" />
    <!-- Título: Editar Nombre de Usuario -->
    <TextView
        android:id="@+id/tv_edit_lastname"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Editar Apellido de Usuario"
        android:textColor="@color/black"
        android:textSize="26sp"
        app:layout_constraintTop_toBottomOf="@id/v1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/et_lastname" />

    <!-- Campo de texto: Nombre de Usuario -->
    <EditText
        android:id="@+id/et_lastname"
        android:layout_width="0dp"
        android:fontFamily="sans-serif-smallcaps"
        android:layout_height="wrap_content"
        android:hint="Ingresa tu nombre de usuario"
        android:textColor="@color/azul_500"
        android:hintTextColor="@color/azul_300"
        android:background="@drawable/rounded_edit_text"
        android:padding="8dp"
        app:layout_constraintBottom_toTopOf="@id/v2"
        app:layout_constraintTop_toBottomOf="@id/tv_edit_lastname"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Línea divisoria -->
    <View
        android:id="@+id/v2"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/azul_300"
        app:layout_constraintTop_toBottomOf="@id/et_lastname"
        app:layout_constraintBottom_toTopOf="@id/tv_edit_email"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tv_edit_email"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Editar Email de Usuario"
        android:textColor="@color/black"
        android:textSize="26sp"
        app:layout_constraintTop_toBottomOf="@id/v2"
        android:fontFamily="sans-serif-smallcaps"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/et_email" />

    <!-- Campo de texto: Nombre de Usuario -->
    <EditText
        android:id="@+id/et_email"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Ingresa tu nombre de usuario"
        android:textColor="@color/azul_500"
        android:hintTextColor="@color/azul_300"
        android:background="@drawable/rounded_edit_text"
        android:fontFamily="sans-serif-smallcaps"
        android:padding="8dp"
        app:layout_constraintBottom_toTopOf="@id/v3"
        app:layout_constraintTop_toBottomOf="@id/tv_edit_email"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Línea divisoria -->
    <View
        android:id="@+id/v3"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/azul_300"
        app:layout_constraintTop_toBottomOf="@id/et_email"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_save"

        />



    <!-- Botón Guardar -->
    <Button
        android:id="@+id/btn_save"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/azul_300"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Guardar"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/v3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>