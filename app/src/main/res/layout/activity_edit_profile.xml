<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:padding="16dp">

    <!-- Título: Editar Nombre de Usuario -->
    <TextView
        android:id="@+id/tv_edit_username"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Editar Nombre"
        android:textColor="@color/black"
        android:fontFamily="sans-serif-smallcaps"
        android:textSize="26sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/et_username" />

    <!-- Campo de texto: Nombre de Usuario -->
    <EditText
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:maxLines="1"
        android:id="@+id/et_username"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="nombre"
        android:textColor="@color/azul_500"
        android:fontFamily="sans-serif-smallcaps"
        android:textColorHint="@color/azul_300"
        android:background="@drawable/rounded_edit_text"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/tv_edit_username"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/v1" />

    <!-- Línea divisoria -->
    <View
        android:id="@+id/v1"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/azul_300"
        app:layout_constraintTop_toBottomOf="@id/et_username"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_edit_lastname" />

    <!-- Título: Editar Apellido -->
    <TextView
        android:id="@+id/tv_edit_lastname"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Editar Apellido"
        android:textColor="@color/black"
        android:textSize="26sp"
        app:layout_constraintTop_toBottomOf="@id/v1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/et_lastname" />

    <!-- Campo de texto: Apellido -->
    <EditText
        android:id="@+id/et_lastname"
        android:layout_width="0dp"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:maxLines="1"
        android:fontFamily="sans-serif-smallcaps"
        android:layout_height="wrap_content"
        android:hint="apellido"
        android:textColor="@color/azul_500"
        android:textColorHint="@color/azul_300"
        android:background="@drawable/rounded_edit_text"
        android:padding="8dp"
        app:layout_constraintBottom_toTopOf="@id/v2"
        app:layout_constraintTop_toBottomOf="@id/tv_edit_lastname"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Línea divisoria -->
    <View
        android:id="@+id/v2"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/azul_300"
        app:layout_constraintTop_toBottomOf="@id/et_lastname"
        app:layout_constraintBottom_toTopOf="@id/tv_edit_peso"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Título: Editar Peso -->
    <TextView
        android:id="@+id/tv_edit_peso"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Editar Peso"
        android:textColor="@color/black"
        android:textSize="26sp"
        app:layout_constraintTop_toBottomOf="@id/v2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/et_peso" />

    <!-- Campo de texto: Peso -->
    <EditText
        android:id="@+id/et_peso"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="peso (kg)"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:maxLines="1"
        android:textColor="@color/azul_500"
        android:textColorHint="@color/azul_300"
        android:background="@drawable/rounded_edit_text"
        android:fontFamily="sans-serif-smallcaps"
        android:padding="8dp"
        android:inputType="numberDecimal"
        app:layout_constraintBottom_toTopOf="@id/v3"
        app:layout_constraintTop_toBottomOf="@id/tv_edit_peso"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Línea divisoria -->
    <View
        android:id="@+id/v3"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/azul_300"
        app:layout_constraintTop_toBottomOf="@id/et_peso"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_edit_email" />

    <!-- Título: Editar Correo -->
    <TextView
        android:id="@+id/tv_edit_email"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Editar Correo"
        android:textColor="@color/black"
        android:textSize="26sp"
        app:layout_constraintTop_toBottomOf="@id/v3"
        android:fontFamily="sans-serif-smallcaps"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/et_email" />

    <!-- Campo de texto: Correo -->
    <EditText
        android:id="@+id/et_email"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="correo"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:maxLines="1"
        android:textColor="@color/azul_500"
        android:textColorHint="@color/azul_300"
        android:background="@drawable/rounded_edit_text"
        android:fontFamily="sans-serif-smallcaps"
        android:padding="8dp"
        app:layout_constraintBottom_toTopOf="@id/v4"
        app:layout_constraintTop_toBottomOf="@id/tv_edit_email"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Línea divisoria -->
    <View
        android:id="@+id/v4"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/azul_300"
        app:layout_constraintTop_toBottomOf="@id/et_email"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_save" />

    <TextView
        android:id="@+id/tv_profile_errors"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:textColor="@color/red"
        android:padding="8dp"
        android:textSize="13sp"
        android:fontFamily="sans-serif"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/v4"
        app:layout_constraintBottom_toTopOf="@id/btn_save"/>

    <!-- Botón Guardar -->
    <Button
        android:id="@+id/btn_save"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/azul_300"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Guardar"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="28dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/v4" />


</androidx.constraintlayout.widget.ConstraintLayout>
