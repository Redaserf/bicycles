<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp">


    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="¡Bienvenido a Más!"
        android:textColor="@android:color/black"
        android:textSize="44sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_explanation"
        android:layout_width="394dp"
        android:layout_height="172dp"
        android:gravity="center"
        android:padding="10dp"
        android:text="Con el botón 'Iniciar Recorrido', podrás registrar tu actividad en tiempo real. Obtendrás datos como las calorías quemadas, tiempo total, velocidad promedio, velocidad máxima y la distancia recorrida. ¡Presiona el botón para comenzar!"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@id/btn_iniciar_recorrido"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_title" />

    <Button
        android:id="@+id/btn_iniciar_recorrido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Iniciar Recorrido"
        android:backgroundTint="@color/yellow_fuerte"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toBottomOf="@id/tv_explanation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
