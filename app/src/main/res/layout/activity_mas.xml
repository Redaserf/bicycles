<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@android:color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Tarjeta: Recorrido -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/tarjeta_recorrido"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/circular_card_background"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tarjeta_calorias"
        app:layout_constraintHorizontalBias="0.5"
        app:layout_constraintVerticalBias="0.2"
        android:layout_marginEnd="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recorrido"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Guardaremos el recorrido que hagas."
            android:textColor="@android:color/black"
            android:textSize="12sp"
            app:layout_constraintTop_toBottomOf="@id/tarjeta_recorrido"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="4dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Tarjeta: Calorías -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/tarjeta_calorias"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/circular_card_background"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/tarjeta_recorrido"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calorías"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calcularemos calorías quemadas."
            android:textColor="@android:color/black"
            android:textSize="12sp"
            app:layout_constraintTop_toBottomOf="@id/tarjeta_calorias"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="4dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Tarjeta: Tiempo -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/tarjeta_tiempo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/circular_card_background"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/tarjeta_recorrido"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tarjeta_velocidad_promedio"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tiempo"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mediremos cuánto tiempo tardaste."
            android:textColor="@android:color/black"
            android:textSize="12sp"
            app:layout_constraintTop_toBottomOf="@id/tarjeta_tiempo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="4dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Tarjeta: Velocidad Promedio -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/tarjeta_velocidad_promedio"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/circular_card_background"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/tarjeta_calorias"
        app:layout_constraintStart_toEndOf="@id/tarjeta_tiempo"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Velocidad Promedio"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calcularemos tu velocidad promedio."
            android:textColor="@android:color/black"
            android:textSize="12sp"
            app:layout_constraintTop_toBottomOf="@id/tarjeta_velocidad_promedio"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="4dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Botón Iniciar Recorrido -->
    <Button
        android:id="@+id/btn_iniciar_recorrido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Iniciar Recorrido"
        android:backgroundTint="@color/azul_200"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toBottomOf="@id/tarjeta_tiempo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />
</androidx.constraintlayout.widget.ConstraintLayout>
