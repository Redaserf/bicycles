<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    android:background="@drawable/esquinas_redondas_dialog_eliminar_bici">


    <TextView
        android:id="@+id/txt_nombre"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Nombre: "
        android:padding="16dp"
        android:textSize="25sp"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/txt_nombre"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@id/btnAgregar"
        />

    <EditText
        android:id="@+id/edtxt_nombre"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Bicicleta_1"
        android:background="@drawable/edit_text_circle"
        android:padding="12dp"
        android:textSize="16sp"
        android:singleLine="true"
        android:ellipsize="end"
        android:imeOptions="actionDone"
        android:maxLines="1"
        android:scrollHorizontally="true"
        android:textColor="#000000"
        android:textColorHint="#999999"
        app:layout_constraintTop_toBottomOf="@id/txt_nombre"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
    />

    <!--Para los errores-->
    <TextView
        android:id="@+id/tv_login_errors"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:textAlignment="center"
        android:textColor="#FF0000"
        android:padding="8dp"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edtxt_nombre"/>

    <Button
        android:id="@+id/btnAgregar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Agregar"
        android:backgroundTint="@color/azul_200"
        android:textColor="#FFFFFF"
        android:padding="10dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/edtxt_nombre"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />


    <Button
        android:id="@+id/btnCancel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Cancelar"
        android:backgroundTint="#E0E0E0"
        android:textColor="#333333"
        android:padding="10dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/btnAgregar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />
</androidx.constraintlayout.widget.ConstraintLayout>
