<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_final_verde"
    tools:context=".Views.Home">

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/NafisBottomNavigation" >


    </FrameLayout>

    <com.nafis.bottomnavigation.NafisBottomNavigation
        android:id="@+id/NafisBottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:mbn_circleColor="#A2AFA2"
        app:mbn_backgroundBottomColor="#3d3d3d"
        app:mbn_countBackgroundColor="@color/black"
        app:mbn_countTextColor="@color/black"
        app:mbn_defaultIconColor="#efefef"
        app:mbn_rippleColor="#2f424242"
        app:mbn_selectedIconColor="#292929"
        app:mbn_shadowColor="#1f212121"
        />

</RelativeLayout>